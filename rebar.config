{erl_opts, [debug_info]}.
{deps, [
    {khepri, "0.7.0"},
    {thoas, "1.0.0"},
    {mochiweb, "3.1.2"},
    {erlexec, "~> 2.0"}
]}.

{relx, [
    {release, {virtuerl, git}, [virtuerl, {khepri, load}, {mnesia, load}, erts]},
    {mode, prod},
    {extended_start_script, false}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [virtuerl]}
]}.

{ct_opts, [
    {sys_config, "config/sys.config"}
]}.

{project_plugins, [
  erlfmt,
  rebar3_efmt,
  {eqwalizer_rebar3,
    {git_subdir,
        "https://github.com/whatsapp/eqwalizer.git",
        {branch, "main"},
        "eqwalizer_rebar3"}}
]}.
